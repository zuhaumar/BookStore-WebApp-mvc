@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #dbf3f3;
            font-family: Arial, sans-serif;
        }

        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between; 
        }

        .navbar .left {
            display: flex;
            align-items: center;
        }

        .navbar .right {
            display: flex;
            align-items: center;
        }

        .navbar .logo img {
            margin-top: 12px;
            height: 60px;
            width: auto;
            transition: transform 0.5s;
        }

        .navbar .logo img:hover {
            transform: scale(1.2); 
        }

        .navbar ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .navbar ul li a {
            color: black;
            text-decoration: none;
            font-size: 1.2rem;
        }

        .navbar ul li a:hover {
            color: #165bd8;
        }

        .text-center {
            text-align: center;
            margin-top: 50px;
        }

        .display-4 {
            font-size: 2.5rem;
        }

        .text-center p {
            font-size: 1.25rem;
        }

        .navbar-text {
            font-family: 'Work Sans', sans-serif;
            margin-left: 33px;
            margin-top: 22px;
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            left: 0;
            border-radius: 10px; 
            overflow: hidden; 
        }

        .dropdown-content li {
            padding: 8px 12px;
        }

        .dropdown-content li a {
            text-decoration: none;
            color: black;
            display: block;
        }

        .dropdown-content li a:hover {
            color: #165bd8;
        }

        .arrow {
            margin-left: 5px; 
            font-size: 0.8em;
        }

        .icon-wrapper {
            display: flex;
            align-items: center;
        }

        .star-icon {
            margin-left: 5px;
            font-size: 0.6em; 
        }

        .arrow-icon {
            margin-left: 5px;
            font-size: 1.105em; 
        }

        .signup-button {
            background-color: #165bd8;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-family: 'Work Sans', sans-serif;
            font-size: 1rem;
            transition: background-color 0.3s;
        }

        .signup-button:hover {
            background-color: #0d4abf;
        }

    </style>
</head>

<body>
    <nav class="navbar">
        <div class="left">
            <ul>
                <li>
                    <a href="#" class="logo">
                        <img src="@Url.Content("~/images/logo.png")" alt="Logo">
                    </a>
                </li>

                <li class="navbar-text">
                    <a href="#" class="icon-wrapper">
                        Best Sellers <i class="fas fa-star star-icon"></i>
                    </a>
                </li>

                <li class="navbar-text">
                    <a href="#" id="genres" class="icon-wrapper">Genres <i class="fas fa-caret-down arrow-icon"></i></a>
                    <ul id="genres-dropdown" class="dropdown-content">
                        <li><a href="/Book/FetchByGenre/Action">Action</a></li>
                        <li><a href="/Book/FetchByGenre/Adventure">Adventure</a></li>
                        <li><a href="/Book/FetchByGenre/Animation">Animation</a></li>
                        <li><a href="/Book/FetchByGenre/Biography">Biography</a></li>
                        <li><a href="/Book/FetchByGenre/Comedy">Comedy</a></li>
                        <li><a href="/Book/FetchByGenre/Crime">Crime</a></li>
                        <li><a href="/Book/FetchByGenre/Documentary">Documentary</a></li>
                        <li><a href="/Book/FetchByGenre/Romance">Romance</a></li>
                        <li><a href="/Book/FetchByGenre/Thriller">Thriller</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <div class="right">
            <a href="User/Signup"><button class="signup-button">Get Started</button></a>
        </div>

    </nav>

    <div class="text-center">
        <h1 class="display-4">Welcome to My Web Page</h1>
        <p>This is a paragraph styled with custom CSS.</p>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var genresLink = document.getElementById("genres");
            var genresDropdown = document.getElementById("genres-dropdown");

            // Hide the dropdown initially
            genresDropdown.style.display = "none";

            // Toggle dropdown visibility when "Genres" link is clicked
            genresLink.addEventListener("click", function(event) {
                event.preventDefault();
                if (genresDropdown.style.display === "none") {
                    genresDropdown.style.display = "block";
                } else {
                    genresDropdown.style.display = "none";
                }
            });
        });
    </script>

</body>
</html>